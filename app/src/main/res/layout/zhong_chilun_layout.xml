<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:id="@+id/lay_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_click_withe"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_icon"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/dp_16" />
                <TextView
                    android:id="@+id/txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingStart="@dimen/dp_16"
                    tools:ignore="RtlHardcoded,RtlSymmetry"
                    android:paddingLeft="@dimen/dp_16" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/ic_right_hui"
                    android:layout_marginRight="@dimen/dp_16" />
            </LinearLayout>

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_hui_rt_frame"
                android:layout_marginLeft="16dp" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_hui_lt_frame"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_hui_rb_frame"
                android:layout_marginLeft="16dp" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_hui_lb_frame"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp" />
        </RelativeLayout>
    </layout>