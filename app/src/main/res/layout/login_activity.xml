<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbg_blue"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_above="@+id/login_phone"
            android:layout_margin="16dp"
            android:background="@drawable/bg_click_withe_frame">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/wxdl"
                android:textColor="@color/app_blue"
                tools:ignore="RelativeOverlap" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                app:srcCompat="@drawable/ic_wx"
                tools:ignore="RtlHardcoded,VectorDrawableCompat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_16"
            android:layout_marginBottom="22dp"
            android:background="@drawable/bg_click_withe_frame">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="手机号登录"
                android:textColor="@color/app_blue"
                tools:ignore="RelativeOverlap" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@+id/textView3"
                android:layout_toStartOf="@+id/textView3"
                app:srcCompat="@drawable/phone"
                tools:ignore="RtlHardcoded,VectorDrawableCompat" />
        </RelativeLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_click_gray"
            android:padding="@dimen/dp_16"
            android:src="@drawable/guanbi_hui" />
    </RelativeLayout>
</layout>