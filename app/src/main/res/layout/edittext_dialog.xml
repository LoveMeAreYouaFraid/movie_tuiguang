<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_click_withe_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <include layout="@layout/line_w" />

        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/hui"
            android:hint="请输入"
            android:paddingLeft="@dimen/dp_16"
            android:textColor="@color/black"
            android:textColorHint="@color/ahui"
            android:textSize="14sp" />

        <include
            android:id="@+id/line_one"
            layout="@layout/line_w" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="@dimen/butt"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_determine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_click_dialog_lift_and_rigth_gray"
                android:gravity="center"
                android:minWidth="128dp"
                android:text="确定"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16" />


            <View
                android:id="@+id/line_two"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bt_bg_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_click_dialog_right_gray"
                android:gravity="center"
                android:minWidth="128dp"
                android:text="取消"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
</layout>