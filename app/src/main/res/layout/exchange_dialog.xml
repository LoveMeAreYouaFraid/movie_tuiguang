<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_click_withe_frame_15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@mipmap/code_pop_bg" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/gb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/code_pop_delet"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16" />

        </RelativeLayout>

        <EditText
            android:id="@+id/exchang"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_hui_yuan"
            android:inputType="text"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/bg_bule_fillet"
            android:gravity="center"
            android:text="@string/ljjh"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>