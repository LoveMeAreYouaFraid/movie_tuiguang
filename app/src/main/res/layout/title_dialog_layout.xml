<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_click_gray"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:minHeight="@dimen/dp_44"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/sp_16" />


        <include
            android:id="@+id/line_one"
            layout="@layout/line_w" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="@dimen/butt"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_determine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_click_dialog_lift_and_rigth_gray"
                android:gravity="center"
                android:minWidth="128dp"
                android:text="@string/qx"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16" />


            <View
                android:id="@+id/line_two"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bt_bg_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_click_dialog_right_gray"
                android:gravity="center"
                android:minWidth="128dp"
                android:text="@string/qd"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</layout>